<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#ffffff"
    android:background="@drawable/card_bg_white"
    android:layout_margin="8dp"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/text_colour"
        android:text="Benz Tractor"/>

    <TextView
        android:layout_width="50dp"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_main"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_price_first"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:text="&#8377; 500"/>
    <TextView
        android:layout_width="50dp"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_suffix"
        android:layout_below="@+id/tv_price_main"
        android:textColor="#746F6F"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:text="per kg"/>


    </RelativeLayout>

